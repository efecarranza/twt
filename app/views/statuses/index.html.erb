<h1>Statuses Index</h1>
<p>Find me in app/views/statuses/index.html.erb</p>

<% if @page > 1 %>
	<%= link_to "previous page", page: @page - 1 %>
<% end %>
<%= link_to "next page", page: @page + 1 %>

<% @statuses.each do |status| %>
	<%= div_for status do %>
		<p>
			<%= status.body %>
		</p>	
	<% end %>
<% end %>

